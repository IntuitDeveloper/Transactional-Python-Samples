# Mailchimp Transactional API Configuration
# Copy this file to .env and fill in your values:
#   cp env.example .env
#
# NOTE: Always quote values that contain spaces or special characters

MANDRILL_API_KEY=your_mandrill_api_key_here
DEFAULT_FROM_EMAIL=sender@yourdomain.com
DEFAULT_FROM_NAME="Your Name"
DEFAULT_TO_EMAIL=recipient@example.com
DEFAULT_TO_NAME="Recipient Name"

# SMS settings (optional - for SMS functionality)
# Phone numbers must be in E.164 format (e.g., +1234567890)
SMS_TO_PHONE=+1234567890
SMS_FROM_PHONE=+0987654321
SMS_MESSAGE="Hello from Mandrill SMS!"
SMS_CONSENT_TYPE=onetime
SMS_TRACK_CLICKS=true

# SSL settings (only change if behind corporate proxy with SSL inspection)
# WARNING: Only set to 'false' for testing in trusted environments!
# SSL_VERIFY=false

